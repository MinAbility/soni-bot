{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6"
        ],
        "target": "ES2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "strictPropertyInitialization": false
    }
}
